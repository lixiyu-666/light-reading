<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zealon.readingcloud.book.dao.BookMapper">

    <!-- 1. 只保留必要的ResultMap（如果还有复杂映射需求的话） -->
    <resultMap id="BaseResultMap" type="cn.zealon.readingcloud.common.pojo.book.Book">
        <id column="id" jdbcType="INTEGER" property="id" />
        <!-- 只保留特殊字段映射，普通字段可以删除 -->
        <result column="online_status" jdbcType="BIT" property="onlineStatus" />
    </resultMap>

    <!-- 2. 基础列列表（如果多个查询用到） -->
    <sql id="Base_Column_List">
        id, author_id, dic_category, dic_channel, dic_serial_status, online_status, book_id,
      book_name, book_score, key_word, img_url, author_name, introduction, isbn, word_count,
      creater, create_time, update_time, updater
    </sql>

    <!-- 3. 按业务ID查询 -->
    <select id="selectByBookId" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from book
        where book_id = #{bookId}
    </select>

    <!-- 4. 复杂分页查询（使用BookQuery参数） -->
    <select id="findPageWithResult" parameterType="cn.zealon.readingcloud.book.dto.BookQuery"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from book
        <include refid="findPageWithWhere" />
        order by create_time desc
        limit #{pageNumber}, #{pageSize}
    </select>

    <!-- 5. 保留：查询总数（使用BookQuery参数） -->
    <select id="findPageWithCount" parameterType="cn.zealon.readingcloud.book.dto.BookQuery"
            resultType="Integer">
        select count(1)
        from book
        <include refid="findPageWithWhere" />
    </select>
    <select id="selectBookById" resultType="cn.zealon.readingcloud.common.pojo.book.Book"></select>

    <!-- 6. 动态查询条件 -->
    <sql id="findPageWithWhere">
        <where>
            <if test="authorId != null">
                and author_id = #{authorId}
            </if>
            <if test="dicCategory != null">
                and dic_category = #{dicCategory}
            </if>
            <if test="dicChannel != null">
                and dic_channel = #{dicChannel}
            </if>
            <if test="dicSerialStatus != null">
                and dic_serial_status = #{dicSerialStatus}
            </if>
            <if test="onlineStatus != null">
                and online_status = #{onlineStatus}
            </if>
            <if test="bookId != null and bookId != ''">
                and book_id = #{bookId}
            </if>
            <if test="bookName != null and bookName != ''">
                and (book_name like concat('%',#{bookName},'%')
                or book_id like concat('%',#{bookName},'%'))
            </if>
        </where>
    </sql>

</mapper>